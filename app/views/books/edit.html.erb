<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'users/bookerrors', book: @book %>
		  <h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
        <div class="form-group">
          <label for "book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for "book_body">Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        </div>
　        <%= link_to "Show", book_path(@book.id), {class: :show} %>
　        |
　        <%= link_to "Back", books_path, {class: :back} %>
      <% end %>
    </div>
  </div>
</div>
